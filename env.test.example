# Test Environment Configuration
# Copy this to .env.test for testing
# Run: npm run test:env

NODE_ENV=test
NEXT_PUBLIC_APP_NAME=SmartStore SaaS
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Database (Use separate test database)
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=test-secret-key-change-in-production-min-32-chars

# Mock External APIs
MOCK_EXTERNAL_APIS=true

# Email (Mock)
EMAIL_FROM=noreply@smartstore.test
SENDGRID_API_KEY=mock_sendgrid_key

# SMS/WhatsApp (Mock)
TWILIO_ACCOUNT_SID=mock_twilio_sid
TWILIO_AUTH_TOKEN=mock_twilio_token

# Payments (Mock)
STRIPE_SECRET_KEY=sk_test_mock
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_mock

# Test credentials
TEST_USER_EMAIL=admin@techhub.lk
TEST_USER_PASSWORD=password123



