# SmartStore SaaS Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-jwt-key-here-minimum-32-characters-long

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
DIRECT_URL=postgresql://username:password@host:port/database_name

# Redis Configuration (for caching)
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=your-redis-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@your-domain.com

# Payment Processing
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_BUCKET_REGION=us-east-1

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=https://your-domain.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_WEBHOOKS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Keys for External Services
ANALYTICS_ENDPOINT=https://your-analytics-service.com/api/events
ERROR_SERVICE_ENDPOINT=https://your-error-service.com/api/errors

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem




