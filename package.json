{
  "name": "smartstore-saas",
  "version": "1.2.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:console": "eslint --ext .ts,.tsx --no-eslintrc --parser @typescript-eslint/parser --rule 'no-console: error' src/",
    "test": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "test:unit": "jest -c jest.config.unit.js --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest -c jest.config.integration.js --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage": "pnpm test:unit --coverage && pnpm test:integration --coverage",
    "test:correlation": "jest --testPathPattern=correlation",
    "test:report": "npx playwright show-report",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:seed:test-users": "npx tsx scripts/seed-test-users.ts",
    "db:test:setup": "dotenv -e .env.test -- prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "audit:rbac": "npx tsx scripts/rbac-audit.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@sendgrid/mail": "^8.1.6",
    "@tanstack/react-query": "^5.28.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.356.0",
    "next": "14.1.4",
    "next-auth": "^4.24.7",
    "next-themes": "^0.3.0",
    "nodemailer": "^6.10.1",
    "oauth": "^0.10.2",
    "openid-client": "^6.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.1",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "twilio": "^5.10.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@next/swc-darwin-x64": "^15.5.4",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "autoprefixer": "^10.0.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prisma": "^6.16.2",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
