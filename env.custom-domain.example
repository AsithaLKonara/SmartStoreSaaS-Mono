# Custom Domain Environment Variables
# Copy this to .env.local for custom domain deployment

# Custom Domain Configuration
NEXTAUTH_URL=https://your-custom-domain.com
NEXT_PUBLIC_APP_URL=https://your-custom-domain.com

# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Custom Domain Settings
CUSTOM_DOMAIN_ENABLED=true
CUSTOM_DOMAIN_NAME="your-custom-domain.com"
CUSTOM_DOMAIN_SSL=true

# CORS Configuration for Custom Domain
CORS_ALLOWED_ORIGINS="https://your-custom-domain.com,https://www.your-custom-domain.com"
CORS_ALLOW_CUSTOM_DOMAINS=true

# Security Configuration
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# API Configuration
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PWA=true
ENABLE_OFFLINE_SYNC=true

# Integration Settings
WOOCOMMERCE_ENABLED=true
WHATSAPP_ENABLED=true
SOCIAL_COMMERCE_ENABLED=true

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info
ENABLE_METRICS=true
